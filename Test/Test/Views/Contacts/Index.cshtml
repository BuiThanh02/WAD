
@{
    ViewBag.Title = "Index";
}

@model List<Test.Models.Contacts>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <p>
                        @Html.ActionLink("Create New", "Create")
                    </p>
                </h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Contact name</th>
                            <th>Contact number</th>
                            <th>Group name</th>
                            <th>Hire date</th>
                            <th>Birthday</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var con in Model)
                        {
                            <tr>
                                <td>@con.ContactName</td>
                                <td>@con.ContactNumber</td>
                                <td>@con.GroupName</td>
                                <td>@con.HireDate</td>
                                <td>@con.Birthday</td>
                                <td>
                                    <a href="~/Contacts/Edit/@con.ID">Edit</a>
                                    <a onclick="return confirm('Are you sure?');" href="~/Contacts/Delete/@con.ID" class="text-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>

